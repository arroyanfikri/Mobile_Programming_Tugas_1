<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="mungkinkah disana"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="kau rasa bahagia"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="atau malah sebaliknya"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="telah lama kita tidak bertemu"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#2196F3"
        android:gravity="center"
        android:text="tak pernah ku dengar"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#E91E63"
        android:gravity="center"
        android:text="berita tentangmu"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>